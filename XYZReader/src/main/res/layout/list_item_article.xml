<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ListItemCardView"
    app:cardElevation="@dimen/cardView_default_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.helper.DynamicHeightNetworkImageView
            android:id="@+id/article_image"
            style="@style/ListItemImage"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/article_author"
            style="@style/ArticleListItem.Author"
            android:fontFamily="@font/roboto_regular"
            tools:text="@string/placeholder_author" />

        <TextView
            android:id="@+id/article_title"
            style="@style/ArticleListItem.Title"
            android:fontFamily="@font/roboto_regular"
            tools:text="@string/placeholder_title" />

        <TextView
            android:id="@+id/article_date"
            style="@style/ArticleListItem.Date"
            android:fontFamily="@font/roboto_regular"
            tools:text="@string/placeholder_date" />

    </LinearLayout>
</android.support.v7.widget.CardView>
